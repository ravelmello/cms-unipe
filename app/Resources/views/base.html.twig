                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" >Custom CMS Pós-Unipê</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Link</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        <div class="col-md-3 list-group table-responsive">
            <a href="{{ path('cms_homepage') }}" class="list-group-item">Home</a>
            <a href="{{ path('cms_person_new') }}" class="list-group-item">Adicionar Pessoa</a>
            <a href="{{ path('cms_person_index') }}" class="list-group-item">Listar Pessoas</a>

        </div>
        {% block body %}

         {% endblock %}
    </div>
    </div>

    {% block javascripts %}

    {% endblock %}

    <script type="text/javascript" src="{{ asset('styles/js/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('styles/js/dataTable.js') }}"></script>
    </div>
    </body>
</html>
